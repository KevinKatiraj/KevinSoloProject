<section class="bcimazh"
    style="background-image: url('https://wallpapercave.com/wp/wp5352442.jpg'); height:800px ; background-position: center;  background-size: cover;">
    <div class="nav-bar">
        <div class="width-restrictor">
            <div class="nav-left">
                <a class="logo" href="/"><img
                        src="https://images-platform.99static.com//hzpQKgcKN6sZZOC4xfmFAkV-avY=/215x0:984x769/fit-in/590x590/99designs-contests-attachments/51/51051/attachment_51051281"
                        class="logo"></a>
                <a class="navbar-link undefined" href="/Clothes"
                    style="color: rgb(51, 51, 51); border-bottom: none; padding-top: 0px;">Clothes</a>
                <a class="navbar-link undefined" href="/Postclothes"
                    style="color: rgb(255, 77, 0); border-bottom: none; padding-top: 0px;">Post your closet</a>
            </div>
            <div class="nav-right">
                <a class="navbar-icon wishlist-icon" href="/Favourite"><img
                        src="https://cdn.prod.joinwardrobe.com/packs/media/images/52e752043ee2a8338016.svg"
                        style="height: 27px;"></a>
                <a href="/Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>


    <div class="moti col-sm-3">
        <div class="search">
            <input type="text" class="search-bar col-sm-9">
            <button class="btn-moti"><svg stroke="currentColor" fill="currentColor" stroke-width="0"
                    viewBox="0 0 1024 1024" height="1.5em" width="1.5em" xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M909.6 854.5L649.9 594.8C690.2 542.7 712 479 712 412c0-80.2-31.3-155.4-87.9-212.1-56.6-56.7-132-87.9-212.1-87.9s-155.5 31.3-212.1 87.9C143.2 256.5 112 331.8 112 412c0 80.1 31.3 155.5 87.9 212.1C256.5 680.8 331.8 712 412 712c67 0 130.6-21.8 182.7-62l259.7 259.6a8.2 8.2 0 0 0 11.6 0l43.6-43.5a8.2 8.2 0 0 0 0-11.6zM570.4 570.4C528 612.7 471.8 636 412 636s-116-23.3-158.4-65.6C211.3 528 188 471.8 188 412s23.3-116.1 65.6-158.4C296 211.3 352.2 188 412 188s116.1 23.2 158.4 65.6S636 352.2 636 412s-23.3 116.1-65.6 158.4z">
                    </path>
                </svg>
            </button>
        </div>
        <div class="weather loading">
            <h2 class="city">Weather in Pogradec</h2>
            <h1 class="temp">51°C</h1>
            <div class="flex">
                <img src="https://openweathermap.org/img/wn/04n.png" alt="" class="icon">
                <div class="description">Cloudy</div>
            </div>
            <div class="humidity">Humidity : 60%</div>
            <div class="wind">Wind Speed : 6.2 km/h</div>
        </div>
    </div>

    <h1 class="text-center mt-4 col-sm-12 text-light">Welcome @ViewBag.iLoguari.FirstName</h1>


    <div class="row">
        <div class="col-sm-12 text-center ">
            <form action="/generate" method="post">
            <input type="hidden" name="moti" id ="moti" value="" >
            <button type="submit" class="btn btn-light" >Generate outfit for today</button>

            </form>

          
        </div>
        <div class="col-sm-9 text-center row">
                <img class="clothes-img rounded mx-auto d-block"
                src="~/Images/@ViewBag.kepucet.Myimage"/>
                <img class="clothes-img rounded mx-auto d-block"
                src="~/Images/@ViewBag.pantallonat.Myimage"/>
                <img class="clothes-img rounded mx-auto d-block"
                src="~/Images/@ViewBag.bluzat.Myimage"/>
        </div>
    </div>

</section>